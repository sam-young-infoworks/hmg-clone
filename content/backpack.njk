---
pagination:
    data: products
    size: 1
    alias: product
layout: layouts/base.njk
permalink: "backpacks/{{ product.name | slugify }}/"
---

<h1>{{ product.name }}</h1>

{% set variant = product.defaultVariant %}
{% set url = product.defaultVariant.firstImage.url %}
{% set altText = product.defaultVariant.firstImage.altText %}

{# {% image url, altText, ["auto"], "(min-width: 36em) 33.3vw, 100vw" %} #}

<div>
    <image style="width: 100%" src={{ url }} alt={{ altText }}  />
{# {% image url, altText, [1800, 1200, 600, 280], "(max-width: 600px) 480px, 800px" %} #}
    <span>${{ variant.price }}</span>
    <br />
    <span>Stock: {{ variant.stock }}</span>
</div>

