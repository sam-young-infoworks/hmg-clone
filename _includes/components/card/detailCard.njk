{%- css %}{% include "public/css/components/card/card.css" %}{%- endcss %}

<article class="card">
  <div class="card__image">
    <a href=products/{{ item.name | slugify }}>
      <image class="w-100" src={{ src }} alt="" />
    </a>
  </div>
  <div class="card__details">
    <p>Reviews</p>
    <a href=products/{{ item.name | slugify }}>{{ item.name }}</a>
    <p>{{ item.price }}</p>
    <a class="button button-transparent button-link w-100 mb-2" href=products/{{ item.name | slugify }}>Shop Now</a>
  </div>
</article>